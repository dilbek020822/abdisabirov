import random

capital = 1000  # начальный капитал в $
for day in range(1, 8):
    change = random.uniform(-0.05, 0.05)  # изменение от -5% до +5%
    capital += capital * change
    print(f"День {day}: изменение {change:.2%}, капитал: ${capital:.2f}")

print("Итоговый капитал:", round(capital, 2))
